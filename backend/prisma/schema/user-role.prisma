model UserRole {
  id        String     @id @default(uuid())
  userId    String     
  user      User       @relation(fields: [userId], references: [id])
  roleId    String     
  role      AuthRole   @relation(fields: [roleId], references: [id])
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([userId, roleId])
}
